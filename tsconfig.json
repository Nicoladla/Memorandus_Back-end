{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
          "@/*": [
            "*"
          ]
        },
        "plugins": [
          {
            "transform": "typescript-transform-paths"
          }
        ]
    },
    "ts-node": {
        "esm": true
    }
}